@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.BlogTitle</td>
            <td>@Convert.ToDateTime(item.CreateDate).ToShortDateString()</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a href="/Blog/DeleteBlog/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<br>
<a href="/Blog/BlogAdd" class="btn btn-info">Yeni Blog Ekle</a>
